---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Abstracts Power Wash offers professional and reliable power washing services to rejuvenate your home's exterior, including roofs, windows, and driveways. Our expert team uses advanced equipment to ensure a thorough and safe cleaning process, enhancing the appearance and longevity of your property. Trust us to deliver exceptional results and boost your home's curb appeal."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );

    --accent-gunmetal-light: 141, 141, 141;
    --accent-gunmetal: 53, 62, 67;
    --accent-gunmetal-gradient: linear-gradient(
      45deg,
      rgb(var(--accent-gunmetal)),
      rgb(var(--accent-gunmetal-light)) 30%,
      white 60%
    );

    --accent-pastelRed: 255, 116, 108;
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }

  .background-overlay {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: 1;
    top: 0;
    left: 0;
    opacity: 0.3;
    background-color: #838383;
  }
</style>
