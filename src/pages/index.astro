---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Welcome to Abstracts Power Wash">
  <main>
    <section
      class="hero-section relative w-full mx-auto py-[200px] bg-hero-section bg-center bg-no-repeat bg-cover"
    >
      <div class="background-overlay"></div>

      <div
        class="container flex h-full px-8 items-start flex-wrap mx-auto relative z-50"
      >
        <div class="w-full flex items-start relative float-left">
          <h1 class="text-5xl lg:text-6xl font-bold">WELCOME TO MVLANDSCAPE</h1>
        </div>

        <div class="w-[85%] lg:w-[50%] flex items-start relative float-left">
          <div
            class="hero_button_container flex pt-14 items-center content-start flex-wrap relative w-full self-stretch"
          >
            <div class="w-full lg:w-[80%] flex relative mb-20">
              <p class="bg-slate-50 bg-opacity-30 font-semibold">
                Welcome to Abstracts Pressure Washing, we specialize in
                rejuvenating your property, leaving them sparkling clean and
                enchancing your curb appeal. Say goodye to dirt, grime, and
                mold. We are here to help you with all your pressure washing
                needs. Experience the difference and let the sunshine
                inâ€”schedule your free estimate today!
              </p>
            </div>

            <div class="flex gap-3">
              <a
                href="/services/residential-services"
                class="bg-cyan-300 font-semibold rounded-lg py-3 px-5 hover:bg-darker_cafe lg:hover:scale-105 transition-all"
                >Our Services</a
              >

              <a
                href="#contact"
                class="bg-cyan-300 font-semibold rounded-lg py-3 px-5 hover:bg-darker_cafe lg:hover:scale-105 transition-all"
                >Contact Us</a
              >
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    background-color: #fff;
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }
  /* h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  } */
  .background-overlay {
    /* width: 100%;
		height: 100%;
		position: absolute;
		z-index: 1;
		top: 0;
		left: 0; */
  }
  .section-wrapper {
    position: relative;
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
</style>
